@model BioEngine.BRC.Domain.Patreon.PatreonGoal

@if (Model != null)
{
    <div class="card mb-4 patreon-widget black">
        <!--Card content-->
        <div class="card-body">
            <h4 class="card-title">
                <a href="https://www.bioware.ru/biowareru/articles/others/patreon.html">BRC на Patreon</a>
            </h4>
            <div class="patreon-progress">
                Собрано: <span class="">$@Model.CurrentAmount из $@Model.Amount</span>
            </div>
            <div class="progress">
                <div class="progress-bar" role="progressbar" style="width: @(Model.CompletedPercentage)%" aria-valuenow="@(Model.CompletedPercentage)" aria-valuemin="0" aria-valuemax="100"></div>
            </div>
            <div class="patreon-description">
                <strong>Ближайшая цель</strong>: @Model.Description.
            </div>
            <a href="https://www.patreon.com/bePatron?u=6790376">
                <img src="/img/patreon.png" alt="Become a Patron"/>
            </a>

        </div>

    </div>
}
